{
  "name": "game-snake",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build:site:app": "webpack --config webpack.site.app.ts --mode=production --env production --progress",
    "build:site:background": "webpack --config webpack.site.background.ts --mode=production --env production --progress",
    "build:game:snake": "webpack --config webpack.game.snake.ts --mode=production --env production --progress",
    "build:game:pong50ce": "webpack --config webpack.game.pong50ce.ts --mode=production --env production --progress",
    "clean": "rm -rf node_modules/ dist/",
    "clear": "rm -rf dist/",
    "serve": "http-server dist/",
    "dev:pong50ce": "webpack --config webpack.game.pong50ce.ts serve"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.0",
